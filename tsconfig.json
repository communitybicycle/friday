{
  "compilerOptions": {
    "allowJs": true,
    "module": "ES2020",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES5",
    "baseUrl": "./",
    "paths": {
      "components/*": ["./src/components/*"],
      "data/*": ["./src/data/*"],
      "hooks/*": ["./src/hooks/*"],
      "modules/*": ["./src/modules/*"],
      "pages/*": ["./src/pages/*"],
      "reducers/*": ["./src/reducers/*"],
      "theme/*": ["./src/theme/*"],
      "types/*": ["./src/types/*"],
      "utils/*": ["./src/utils/*"],
      "*": ["./src/node_modules/*"]
    },
    "jsx": "react"
  },
  "include": ["src/**/*"]
}
