{
  "compilerOptions": {
    "allowJs": true,
    "module": "ES2020",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES5",
    "paths": {
      "*": ["node_modules/*"],
      "src/*": ["./src/*"]
    },
    "jsx": "react"
  },
  "include": ["src/**/*"],
}
